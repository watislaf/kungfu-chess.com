{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "server.ts", 
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build", 
    ".next",
    "**/*.test.ts",
    "components/**/*",
    "lib/**/*",
    "app/**/page.tsx",
    "app/**/layout.tsx"
  ]
} 